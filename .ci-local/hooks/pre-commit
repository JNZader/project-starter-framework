#!/bin/bash
# =============================================================================
# PRE-COMMIT: Universal quick checks before commit
# =============================================================================
# Detecta el stack y ejecuta lint + compile rápido
# Tiempo: ~30-60 segundos
# =============================================================================

set -e

# Encontrar directorio .ci-local
HOOK_DIR="$(cd "$(dirname "$0")" && pwd)"
if [[ -d "$HOOK_DIR/../.ci-local" ]]; then
    CI_LOCAL_DIR="$HOOK_DIR/../.ci-local"
elif [[ -d "$(git rev-parse --show-toplevel)/.ci-local" ]]; then
    CI_LOCAL_DIR="$(git rev-parse --show-toplevel)/.ci-local"
else
    echo "Warning: .ci-local not found, skipping pre-commit checks"
    exit 0
fi

PROJECT_DIR="$(dirname "$CI_LOCAL_DIR")"

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "${YELLOW}[pre-commit] Running quick checks...${NC}"

# =============================================================================
# CHECK: No AI attribution in staged files
# =============================================================================
echo -e "${YELLOW}[1/3] Checking for AI attribution...${NC}"

# Patrones prohibidos (case insensitive)
AI_PATTERNS=(
    "co-authored-by:.*claude"
    "co-authored-by:.*anthropic"
    "co-authored-by:.*gpt"
    "co-authored-by:.*openai"
    "co-authored-by:.*copilot"
    "co-authored-by:.*gemini"
    "co-authored-by:.*ai"
    "made by claude"
    "made by gpt"
    "made by ai"
    "generated by claude"
    "generated by gpt"
    "generated by ai"
    "generated with claude"
    "generated with ai"
    "written by claude"
    "written by ai"
    "created by claude"
    "created by ai"
    "assisted by claude"
    "assisted by ai"
    "with help from claude"
    "claude code"
    "made by anthropic"
    "powered by anthropic"
    "created by anthropic"
    "made by openai"
    "powered by openai"
    "created by openai"
    "@anthropic.com"
    "@openai.com"
)

# Note: This checks the working tree copy of staged files, not the actual
# staged content. This is a known limitation for performance reasons.
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -vE '\.(png|jpg|jpeg|gif|ico|woff|ttf|eot|svg|lock)$' || true)

if [[ -n "$STAGED_FILES" ]]; then
    for pattern in "${AI_PATTERNS[@]}"; do
        # Buscar patrón en archivos staged
        MATCHES=$(echo "$STAGED_FILES" | xargs grep -ilE "$pattern" 2>/dev/null || true)
        if [[ -n "$MATCHES" ]]; then
            echo -e "${RED}Found AI attribution in staged files:${NC}"
            echo -e "${RED}  Pattern: $pattern${NC}"
            echo -e "${RED}  Files:${NC}"
            echo "$MATCHES" | while read -r file; do
                echo -e "${RED}    - $file${NC}"
                # Mostrar línea específica
                grep -inE "$pattern" "$file" 2>/dev/null | head -3 | while read -r line; do
                    echo -e "${RED}      $line${NC}"
                done
            done
            echo -e ""
            echo -e "${YELLOW}Remove AI attribution before committing.${NC}"
            echo -e "${YELLOW}You are the sole author of your code.${NC}"
            exit 1
        fi
    done
fi
echo -e "${GREEN}No AI attribution found${NC}"

# Semgrep (si está instalado) - funciona para cualquier lenguaje
if command -v semgrep &> /dev/null; then
    echo -e "${YELLOW}[2/3] Security scan (Semgrep)...${NC}"
    STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(java|kt|js|ts|py|go|rs)$' || true)
    if [[ -n "$STAGED_FILES" ]]; then
        echo "$STAGED_FILES" | xargs semgrep --config=.ci-local/semgrep.yml --severity=ERROR --quiet 2>/dev/null || {
            echo -e "${RED}Semgrep found issues${NC}"
            exit 1
        }
        echo -e "${GREEN}Security OK${NC}"
    else
        echo -e "${GREEN}No files to scan${NC}"
    fi
else
    echo -e "${YELLOW}[2/3] Semgrep not installed, skipping (pip install semgrep)${NC}"
fi

# Quick compile/lint basado en el stack
echo -e "${YELLOW}[3/3] Quick compile check...${NC}"
cd "$PROJECT_DIR"

if [[ -f "build.gradle" || -f "build.gradle.kts" ]]; then
    ./gradlew spotlessCheck classes --no-daemon -q 2>/dev/null || {
        echo -e "${RED}Gradle check failed. Run: ./gradlew spotlessApply${NC}"
        exit 1
    }
elif [[ -f "pom.xml" ]]; then
    ./mvnw compile -q 2>/dev/null || exit 1
elif [[ -f "package.json" ]]; then
    npm run lint --silent 2>/dev/null || yarn lint --silent 2>/dev/null || pnpm lint --silent 2>/dev/null || true
elif [[ -f "Cargo.toml" ]]; then
    cargo check --quiet 2>/dev/null || exit 1
elif [[ -f "go.mod" ]]; then
    go build ./... 2>/dev/null || exit 1
fi

echo -e "${GREEN}Compile OK${NC}"
echo -e "${GREEN}[pre-commit] All checks passed!${NC}"
