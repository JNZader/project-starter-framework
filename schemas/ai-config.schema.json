{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Config",
  "description": "Schema for .ai-config/config.yaml",
  "type": "object",
  "properties": {
    "targets": {
      "type": "array",
      "description": "Targets to sync when running sync-ai-config.sh without arguments",
      "items": {
        "type": "string",
        "enum": ["claude", "opencode", "cursor", "aider", "gemini", "continue"]
      },
      "uniqueItems": true,
      "minItems": 1
    },
    "sync": {
      "type": "object",
      "properties": {
        "claude_mode": {
          "type": "string",
          "enum": ["overwrite", "merge"],
          "default": "overwrite"
        }
      }
    }
  }
}
